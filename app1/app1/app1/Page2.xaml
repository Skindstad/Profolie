<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app1.Page2"
             Title="Gallery"
             >
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="0.5*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                    <RowDefinition Height="100" />
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>

                <Image Source="me.jpg" />
                <Image Grid.Column="1" Source="book.png"/>
                <Image Grid.Column="2" Source="portfolio.png" />
                <Image Grid.Row="1" Source="user.png"/>
                <Image Grid.Row="1" Grid.Column="1"  Source="image.png"/>
                
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>